package com.example.helloworld;

import java.util.LinkedList;
import java.util.Scanner;

public class HelloWorld {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        LinkedList<Task> tasklist = new LinkedList<Task>();
        int bob = 0;
        String n = "";
        String d = "";
        int p = 0;
        while(bob == 0) {
            System.out.println("Lets add a task");
            System.out.println("What is the name of the task?");
            n = scan.nextLine();
            System.out.println("What is the task?");
            d = scan.nextLine();
            System.out.println("What is the priority");
            p = scan.nextInt();
            Task task = new Task(n, d, p);
            if (tasklist.isEmpty())
                tasklist.add(task);
            else if (task.getPriority() == 1)
                tasklist.addFirst(task);
            else if (tasklist.getLast().getPriority() < task.getPriority()) {
                tasklist.addLast(task);
            } else if (tasklist.getFirst().getPriority() > task.getPriority()) {
                tasklist.addFirst(task);
            } else {
                boolean breakloop = false;
                while (!breakloop) {
                    for (int i = 1; i < tasklist.size(); i++) {
                        if (tasklist.get(i - 1).getPriority() <= task.getPriority() && task.getPriority() <= tasklist.get(i).getPriority()) {
                            tasklist.add(i, task);
                            break;
                        }
                    }
                    breakloop = true;
                }
            }
            System.out.println("Task made!");
            System.out.println("Enter 0 to add another task");
            bob = scan.nextInt();
            scan.nextLine();
        }
        String loop = "";
        while(!loop.equals("esc")){
            System.out.println("Would you like to search or delete something?");
            System.out.println("Enter search or delete or esc");
            loop = scan.nextLine();
            if(loop.equals("search")){
                System.out.println("Enter the task name");
                String key = scan.nextLine();
                for(int i = 0; i < tasklist.size(); i++){
                    if(tasklist.get(i).getName().equals(key)){
                        System.out.println(tasklist.get(i));
                    }
                }
            }
            if(loop.equals("delete")){
                System.out.println("Enter the task name");
                String key = scan.nextLine();
                for(int i = 0; i < tasklist.size(); i++){
                    if(tasklist.get(i).getName().equals(key)){
                        System.out.println("Task " + tasklist.remove(i) + "TERMINATED");
                    }
                }
            }
        }
        System.out.println(tasklist);
    }
}
